{
	"family": "your-task-definition-family",
	"taskRoleArn": "arn:aws:iam::your-account-id:role/your-task-role",
	"executionRoleArn": "arn:aws:iam::your-account-id:role/your-execution-role",
	"networkMode": "awsvpc",
	"containerDefinitions": [
		{
			"name": "api",
			"image": "020165421241.dkr.ecr.us-east-1.amazonaws.com/community-api:latest",
			"cpu": 0,
			"memoryReservation": 128,
			"portMappings": [
				{
					"containerPort": 3001,
					"hostPort": 3001,
					"protocol": "tcp"
				}
			],
			"essential": true,
			"environmentFiles": [
				{
					"value": "arn:aws:s3:::community-envs/.env",
					"type": "s3"
				}
			]		
		},
		{
			"name": "client",
			"image": "020165421241.dkr.ecr.us-east-1.amazonaws.com/community-client",
			"cpu": 0,
			"memoryReservation": 128,
			"portMappings": [
				{
					"containerPort": 3000,
					"hostPort": 3000,
					"protocol": "tcp"
				}
			],
			"essential": true
		}
	],
	"requiresCompatibilities": ["FARGATE"],
	"cpu": "256",
	"memory": "512"
}
